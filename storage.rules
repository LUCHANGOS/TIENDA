rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Archivos de productos - solo admins pueden crear/editar
    match /products/{allPaths=**} {
      allow read: if true; // Público para lectura
      allow write: if request.auth != null && 
        request.auth.token.email in ['luisnicolasgonzalez64@gmail.com'];
    }
    
    // Archivos de cotizaciones - usuarios pueden subir, admins pueden ver todo
    match /quotes/uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         request.auth.token.email in ['luisnicolasgonzalez64@gmail.com']);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Archivos temporales de cotizaciones (sin autenticación para facilitar demo)
    match /quotes/temp/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Permitir subida a la raíz para archivos temporales
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
